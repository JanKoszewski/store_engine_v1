<%= form_for(category, :html => { :class => "form form-horizontal" } ) do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name %><br />

  <%= f.label :products %>
  <%= f.select :product_ids, Product.all.collect {|p| [ p.title, p.id ] }, {}, :multiple=>true, :id => "products"%><br /><br />

  <%= f.submit %>
  
<% end %>