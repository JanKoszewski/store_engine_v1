<h1>Awesomestore's Products</h1>

<div class="row">

  <div class="span10 well">
    <h4>Product Filters</h4>
    <div class="btn-group">
      <a href="#products" class="btn">Active Products</a>
      <a href="#retired_products" class="btn">Retired Products</a>
      <%= link_to "Add a product", new_admin_product_path, :id => "add_product", :class => 'btn btn-primary' %>
    </div>
  </div>

  <div class="span10">
    <div>
      <h2>Active <small>Products</small></h2>
      <table id="products" class="table table-striped table-bordered">
        <tr>
          <th>Product</th>
          <th>Description</th>
          <th>Price</th>
          <th>Categories</th>
          <th>&nbsp;</th>
        </tr>
        <%= will_paginate %>
        <% @products.each do |product| %>
          <% if product.active? %>
            <%= render product %>
          <% end %>
        <% end %>
      </table>
      <%= will_paginate %>
      <%= link_to "Add a product", new_admin_product_path, :id => "add_product", :class => 'btn btn-primary' %>
    </div>

    <div style="margin-top:20px;">
      <h2>Products <small>Retired</small></h2>

      <table id="retired_products" class="table table-striped table-bordered">
        <tr>
          <th>Product</th>
          <th>Description</th>
          <th>Price</th>
          <th>Categories</th>
          <th>&nbsp;</th>
        </tr>
        <%= will_paginate %>
        <% @products.each do |product| %>
          <% if product.active? == false %>
            <%= render product %>
          <% end %>
        <% end %>
      </table>
      <%= will_paginate %>
    </div>
  </div>
</div>