<h3>Billing Information</h3>

<%= form_for(@billing_information) do |f| %>
  
  <% if @billing_information.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-error">
        The form contains <%= pluralize(@billing_information.errors.count, "error") %>.
      </div>
      <ul>
      <% @billing_information.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :credit_card_type %>
  <%= f.text_field :credit_card_type %><br />

  <%= f.label :credit_card_number %>
  <%= f.text_field :credit_card_number %><br />

  <%= f.label :credit_card_expiration %>
  <%= f.text_field :credit_card_expiration %><br />

  <%= f.label :billing_addres_line_1 %>
  <%= f.text_field :billing_address_line_1 %><br />

  <%= f.label :billing_addres_line_2 %>
  <%= f.text_field :billing_address_line_2 %><br />

  <%= f.label :billing_address_city %>
  <%= f.text_field :billing_address_city %><br />

  <%= f.label :billing_address_state %>
  <%= f.select :billing_address_state, state_list.collect { |s| s }, {}, :multiple=>false, :id=>"state"%><br />

  <%= f.label :billing_address_zipcode %>
  <%= f.text_field :billing_address_zipcode %><br /><br />

  <%= f.submit "Use this billing information" %>
  
<% end %>